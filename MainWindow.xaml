<Window x:Class="OscilAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OscilAnalyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:CometradeParser />
    </Window.DataContext>
    <Grid ShowGridLines="True">
        <wpf:WpfPlot x:Name="CurrentAPlot" Loaded="CurrentAPlot_Loaded"/>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="3"
                    Height="50"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Command ="{Binding StartRead}"
                    Content="Считать осциллограмму" 
                    Margin="10"
                    Height="30"
                    Width="auto"/>
            <Button Command ="{Binding SelectSignal}"
                    Content="Применить выбранные сигналы" 
                    Margin="10"
                    Height="30"
                    Width="auto"/>
        </StackPanel>
        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Margin="10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Current" FontWeight="Bold" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    
                <ComboBox ItemsSource="{Binding SignalALLNames}"
                  Text="IA"
                  IsEditable="True"    
                  SelectedItem="{Binding CurrentAName,Mode=TwoWay}" />
                <ComboBox ItemsSource="{Binding SignalALLNames}"
                  Text="IB"
                  IsEditable="True"
                  SelectedItem="{Binding CurrentBName,Mode=TwoWay}" />
                <ComboBox ItemsSource="{Binding SignalALLNames}"
                  Text="IC"
                  IsEditable="True"
                  IsReadOnly="True"
                  SelectedItem="{Binding CurrentCName,Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="10">
                
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Voltage" FontWeight="Bold" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    
                <ComboBox ItemsSource="{Binding SignalALLNames}"
                  Text="UA"
                  IsEditable="True"
                  IsReadOnly="True"
                  SelectedItem="{Binding VoltageAName,Mode=TwoWay}" />
                <ComboBox ItemsSource="{Binding SignalALLNames}"
                  Text="UB"
                  IsEditable="True"
                  IsReadOnly="True"
                  SelectedItem="{Binding VoltageBName,Mode=TwoWay}"/>
                <ComboBox ItemsSource="{Binding SignalALLNames}"
                  Text="UC"
                  IsEditable="True"
                  IsReadOnly="True"
                  SelectedItem="{Binding VoltageCName,Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            
        </ScrollViewer>
    </Grid>
</Window>
