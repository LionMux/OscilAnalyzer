                 xmlns:local="clr-namespace:OscilAnalyzer"
                 xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
                 xmlns:prism="http://www.codeplex.com/prism"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d"
                 d:DesignHeight="500" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <UniformGrid Height="auto" >
            <ContentControl Grid.Row="0"
                        Content="{Binding VectrorPlotter.PlotControl}"
                        Height="auto"/>
        </UniformGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Width="auto"
                       Margin="10,0,0,0"
                       VerticalAlignment="Top"
                       Text="{Binding TimeForVD, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBlock Margin="1,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="мс"/>
            <Slider Width="300"
                Value="{Binding TimeForVD, Mode=TwoWay}"
                Minimum="0"
                Maximum="{Binding NumOfPointsForVD}"/>
