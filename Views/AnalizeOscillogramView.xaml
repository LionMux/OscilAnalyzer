<UserControl x:Class="OscilAnalyzer.AnalizeOscillogramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OscilAnalyzer"
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <!--<UserControl.DataContext>
        <local:AnalizeOscillogramViewModel/>
    </UserControl.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1"
                Height="50"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
            <Button Command="{Binding StartAnalizeFourie}"
                Content="Анализ Фурье" 
                Margin="10"
                Height="30"
                Width="auto"/>
            <Button Command="{Binding StartAnalizeTypeOfFault}" 
                Content="Вид КЗ" 
                Margin="10"
                Height="30"
                Width="auto"/>
        </StackPanel>
    </Grid>
</UserControl>
